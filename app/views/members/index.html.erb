<h2>Members (<%= @member.count %>)</h2>
<%= link_to(raw('<i class="fa fa-plus fa-fw"></i>'), new_member_path) %> Add a member
<hr />
<% @member.each do |member| %>
    <% if current_admin.try(:active?) %>
          <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_member_path(member.id)) %>
          <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), member_path(member), method: :delete, data: { confirm: 'Are you sure you want to DELETE this news item?'}) %>
      <% end %>
      <%= member.first_name %> <%= member.last_name %> (<%= member.role %>) <br/>
<% end %>