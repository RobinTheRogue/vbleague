<h3>Members (<%= @member.count %>)</h3>
<%= link_to(raw('<i class="fa fa-plus fa-fw"></i>'), new_member_path) %> Add a member
<hr />
<table width="500">
  <tr><th>Advocates</th><th>Coaches</th><th>Referees</th></tr>
  <tr>
    <td class="advocates" valign="top">
        <% @advocates.each do |member| %>
            <% if current_admin.try(:active?) %>
                  <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_member_path(member.id)) %>
                  <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), member_path(member), method: :delete, data: { confirm: 'Are you sure you want to DELETE this news item?'}) %>
              <% end %>
              <%= member.first_name %> <%= member.last_name %> <br/>
        <% end %>
    </td>
    <td class="coaches" valign="top">
      <% @coaches.each do |member| %>
          <% if current_admin.try(:active?) %>
              <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_member_path(member.id)) %>
              <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), member_path(member), method: :delete, data: { confirm: 'Are you sure you want to DELETE this news item?'}) %>
          <% end %>
          <%= member.first_name %> <%= member.last_name %> <br/>
      <% end %>
    </td>
    <td class="players" valign="top">
      <% @refs.each do |member| %>
          <% if current_admin.try(:active?) %>
              <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_member_path(member.id)) %>
              <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), member_path(member), method: :delete, data: { confirm: 'Are you sure you want to DELETE this news item?'}) %>
          <% end %>
          <%= member.first_name %> <%= member.last_name %> <br/>
      <% end %>
    </td>
  </tr>
</table>