<h2>Divisions (<%= @divisions.try(:count) %>)</h2>
<%= link_to(raw('<i class="fa fa-plus fa-fw"></i>'), new_division_path) %> Add a division
<hr />
<% @divisions.each do |dvn| %>
    <p>
      <% if current_admin.active? %>
          <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_division_path(dvn.id)) %>
          <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), division_path(dvn), method: :delete, data: { confirm: 'Are you sure you want to DELETE this division?'}) %>
      <% end %>
      <%= dvn.name %> <br/>
    </p>
<% end %>