<h2>Locations (<%= @locations.count %>)</h2>
<%= link_to(raw('<i class="fa fa-plus fa-fw"></i>'), new_location_path) %> Add a location
<hr />
<% @locations.each do |location| %>
    <p>
      <% if current_admin.active? %>
          <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_location_path(location.id)) %>
          <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), location_path(location), method: :delete, data: { confirm: 'Are you sure you want to DELETE this news item?'}) %>
      <% end %>
      <%= location.name %> (<%= location.city %>) <br/>
    </p>
<% end %>