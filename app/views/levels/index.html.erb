<h2>Levels (<%= @levels.try(:count) %>)</h2>
<%= link_to(raw('<i class="fa fa-plus fa-fw"></i>'), new_level_path) %> Add a level
<hr />
<% @levels.each do |level| %>
    <p>
      <% if current_admin.active? %>
          <%= link_to(raw('<i class="fa fa-pencil fa-fw"></i>'), edit_level_path(level.id)) %>
          <%= link_to(raw('<i class="fa fa-trash-o fa-fw"></i>'), level_path(level), method: :delete, data: { confirm: 'Are you sure you want to DELETE this level item?'}) %>
      <% end %>
      <%= level.name %> <br/>
    </p>
<% end %>